@{
    ViewData["Title"] = "~/Home/contact.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" href="~/css/bootstrap.css">
   
    <title>Bize Ulaşın</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="sub_page">
    <p id="resultMessage"></p>

    <!-- CSRF Token -->
    @Html.AntiForgeryToken()

    <section class="contact_section layout_padding">
        <div class="container-fluid">
            <div class="col-lg-4 col-md-5 offset-md-1">
                <div class="heading_container">
                    <h2>Bize Ulaşın</h2>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.Uyari))
            {
                <div class="alert alert-success">@ViewBag.Uyari</div>
            }
            <div class="row">
                <div class="col-lg-4 col-md-5 offset-md-1">
                    <div class="form_container">
                        <form id="dataForm" action="/Home/contact/" method="post">
                            <div>
                                <input type="text" id="adiniz" name="adiniz" placeholder="Adınız" required />
                            </div>
                            <div>
                                <input type="text" id="telefon" name="telefon" placeholder="Telefon Numaranız" />
                            </div>
                            <div>
                                <input type="email" id="mail" name="mail" placeholder="Mail" required />
                            </div>
                            <div>
                                <input type="text" id="mesaj" name="mesaj" class="message-box" placeholder="Mesajınız" required />
                            </div>
                            <div class="btn_box">
                                <button type="submit">GÖNDER</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
                <div class="col-lg-7 col-md-6 px-1">
                    <div class="map_container">
                        <div class="map">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.595369148968!2d29.18783531162803!3d40.99034032040973!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cacf9f38ec9d69%3A0xe4873966c5acdb20!2sEsenkent%2C%20Hoca%20Nasrettin%20Cd.%20No%3A27%2C%2034775%20%C3%9Cmraniye%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1733170028523!5m2!1str!2str" width="800" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
</body>
</html>
