<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>www.ekmlift.com</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
   

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">


    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />


    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/css/style.css" rel="stylesheet" />

    <link href="~/css/responsive.css" rel="stylesheet" />

</head>
<body class="sub_page">

    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid header_top_container">
                    <div class="lang_box dropdown">
                        <div class="dropdown-menu ">
                        </div>
                    </div>
                    <div class="contact_nav">
                        <a href="/Home/contact">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                Telefon: 0505 537 2424
                            </span>
                        </a>
                        <a href="/Home/contact">
                            <i class="fa fa-truck" aria-hidden="true"></i>
                            <span style="color: tomato;">
                                EKM LIFT HİDROLİK SİSTEMLERİ
                            </span>
                        </a>
                        <a href="/Home/contact">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                Konum
                            </span>
                        </a>
                    </div>
                    <div class="social_box">
                    </div>
                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container ">
                            <img src="/images/EKM-LİFT-LOGO.gif" style="width:25%; height:0%;" alt="EKM-LİFT-LOGO">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""> </span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                                    <a class="nav-link" href="~/Home/Index">ANASAYFA</a>
                                </li>
                                <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "service" ? "active" : "")">
                                    <a class="nav-link" href="~/Home/service">SERVİSLER</a>
                                </li>
                                <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "about" ? "active" : "")">
                                    <a class="nav-link" href="~/Home/about">HAKKIMIZDA</a>
                                </li>
                                <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "project" ? "active" : "")">
                                    <a class="nav-link" href="~/Home/project">PROJELER</a>
                                </li>
                                <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "contact" ? "active" : "")">
                                    <a class="nav-link" href="~/Home/contact">İLETİŞİM</a>
                                </li>

                            </ul>
                            
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <!-- end header section -->


        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="footer_section">
            <section class="info_section ">

                <div class="container">
                    <div class="contact_nav">
                        <a class="container" href="~/Home/contact">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                Telefon : 0505 537 2424
                            </span>
                        </a>
                        <a class="container" href="~/Home/contact">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>
                                Mail : demo@gmail.com
                            </span>
                        </a>
                        <a class="container"  href="~/Home/contact">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                Konum : Eyüp Sultan Mah. Hoca Nasrettin
                                Cad. Torun Öztürk Petrol No:14
                                Sancaktepe/İstanbul

                            </span>
                        </a>
                    </div>
                    </div>
                    
                    <div class="info_top ">
                        <div class="row info_main_row">
                            <div class="d-flex justify-content-center">
                                <div class="col-sm-6 col-md-4 col-lg-3 mt-auto">
                                    <div class="info_links">
                                        <h4>
                                            Hızlı Bağlantı
                                        </h4>
                                        <div class="info_links_menu">
                                            <a class="" href="~/Home/Index">Anasayfa</a>
                                            <a class="" href="~/Home/service">Servisler</a>
                                            <a class="" href="~/Home/about"> Hakkımızda</a>
                                            <a class="" href="~/Home/project">Projeler</a>
                                            <a class="" href="~/Home/contact">İletişim</a>
                                        </div>
                                    </div>
                                </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="info_form">
                                        <div class="info_logo">
                                            @* <a href="">
                                                <img src="/images/EKM-LİFT-LOGO-2.gif" style=" margin-left:-20px; width: 550px; height:250px;margin-top:-55px;margin-bottom:-100px" alt="EKM-LİFT-LOGO-2">
                                            </a> *@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="info_bottom">
                        <div class="row">
                            <div class="col-md-2">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- end info_section -->
            <!-- footer section -->

            <div class="container">
                <p>
                    &copy; <span id="displayYear"></span> EKM LIFT
                    <a href="~/Home/Index.html">HIDROLİK LIFT SISTEMLERI</a>
                </p>
            </div>
        </footer>
        <!-- footer section -->
        <!-- jQery -->
        <script src="~/js/jquery-3.4.1.min.js"></script>
        <!-- popper js -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
        </script>
        <!-- bootstrap js -->
        <script src="~/js/bootstrap.js"></script>
        <!-- owl slider -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
        </script>
        <!--  OwlCarousel 2 - Filter -->
        <script src="https://huynhhuynh.github.io/owlcarousel2-filter/dist/owlcarousel2-filter.min.js"></script>
        <!-- custom js -->
        <script src="~/js/custom.js"></script>
        <!-- Google Map -->
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
        </script>
        <!-- End Google Map -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

        <script src="~/js/script.js"></script>
    </div>
</body>
</html>

